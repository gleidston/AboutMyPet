<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zoe"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="81dp" />


    <ImageView
        android:id="@+id/img_pet"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:contentDescription="@string/pet_image"
        android:layout_gravity="center"


        app:srcCompat="@drawable/gato"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="157dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/purple_200">
    <TextView
        android:id="@+id/txt_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_pet_description"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="81dp" />
    </ScrollView>
</LinearLayout>